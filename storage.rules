rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // ===================================================================
    // Firebase Storage Rules v2.0
    // ABCDC Staff System - Multi-tenant SaaS
    // ===================================================================
    
    // --------------------------------------------------------
    // 헬퍼 함수: Firestore 조회 (비용 발생 주의)
    // --------------------------------------------------------
    function getUserData() {
      return get(/databases/(default)/documents/users/$(request.auth.uid)).data;
    }
    
    function isSuperAdmin() {
      return getUserData().role == 'super_admin';
    }
    
    function isAdminOf(companyId) {
      let userData = getUserData();
      return userData.role == 'admin' && userData.companyId == companyId;
    }

    function isManagerOfSameCompany(targetUserId) {
       let callerData = getUserData();
       let targetData = get(/databases/(default)/documents/users/$(targetUserId)).data;
       return callerData.role in ['admin', 'super_admin', 'manager'] && 
              callerData.companyId == targetData.companyId;
    }

    // --------------------------------------------------------
    // 1. Company logos
    // --------------------------------------------------------
    match /company-logos/{companyId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && (
        isSuperAdmin() || isAdminOf(companyId)
      ) && request.resource.size < 5 * 1024 * 1024 
        && request.resource.contentType.matches('image/.*');
    }
    
    // --------------------------------------------------------
    // 2. Brand logos (✅ 경로 개선: companyId 추가)
    // --------------------------------------------------------
    match /brands/{companyId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && (
        isSuperAdmin() || isAdminOf(companyId)
      ) && request.resource.size < 5 * 1024 * 1024 
        && request.resource.contentType.matches('image/.*');
    }
    
    // --------------------------------------------------------
    // 3. Resignation signatures
    // --------------------------------------------------------
    match /resignation_signatures/{fileName} {
      allow read: if request.auth != null;
      // 본인의 UID로 시작하는 파일명만 허용
      allow write: if request.auth != null && 
                   fileName.matches('^' + request.auth.uid + '_.*');
    }
    
    // --------------------------------------------------------
    // 4. Health certificates (기존 유지 - 간단한 구조)
    // --------------------------------------------------------
    match /health-certificates/{userId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId || isManagerOfSameCompany(userId)
      );
      
      allow write: if request.auth != null && request.auth.uid == userId &&
        request.resource.size < 5 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*');
    }
    
    // --------------------------------------------------------
    // 기타 모든 파일: 기본적으로 거부
    // --------------------------------------------------------
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
